namespace event;
//cursor event: 40bytes



//define the events here
union EventUnion { 
    Echo,
    Error,
    Join,
    Leave,
    Cursor,
    DrawObject

}

table Message {
  events: [EventUnion];
}

 struct Cursor
{
    ///client id
    client_id: uint8;
    x: uint16;
    y: uint16;
}

table Echo
{
  id: uint32;
  time: uint32;
  payload: string;
}


table Error
{
  description: string;
}


table Join
{
  id: string;
  client_id: uint8;
}

table Leave
{
}



// drawing actions
// drawing actions
// drawing actions


enum DrawType:byte
{
  Line,
  PolyLine,
  Rectangle,
  Circle,
}

struct DrawPoint
{
  x: uint16;
  y: uint16;
}

struct DrawColor
{
  r: uint8;
  g: uint8;
  b: uint8;
}


/// temporary incremental objects
struct DrawIncremental
{
    client_id: uint8;
    type: DrawType;
    point: DrawPoint;
    color: DrawColor;
}

/// final complete object, commited to database. server will assign object_id when 0
table DrawObject
{
    client_id: uint8;
    object_id: uint32;
    /// when deleting an object, you should specify all the needed information to reverse the delete as well. e.g. all the points and color settings.
    remove: bool;
    type: DrawType;
    points: [DrawPoint];
    color: DrawColor;
}

