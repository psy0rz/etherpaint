#!/bin/bash
set -e

#make?
if [ "$1" == "make" ] ; then
    pushd apps/etherpaint/cmake-build-debug/
    make -j32 
    popd
fi

#webpack
pushd apps/etherpaint/wwwdir
yarn install 
echo "Webpack.."
npx webpack 
popd

#run
cd apps/etherpaint/conf
killall paper || true
../cmake-build-debug/paper etherpaint.ini &


wait
echo "BACKGROUND DONE!"



