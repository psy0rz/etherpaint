#!/bin/bash


#make?
if [ "$1" == "make" ] ; then
    pushd apps/etherpaint/cmake-build-debug/
    make -j32 || exit 1
    popd
fi

#webpack
pushd apps/etherpaint/wwwdir
yarn install || exit 1
echo "Webpack.."
npx webpack || exit 1
popd

#run
cd cd apps/etherpaint/conf
killall paper
../cmake-build-debug/paper etherpaint.ini &


wait
echo "BACKGROUND DONE!"



